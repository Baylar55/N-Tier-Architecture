@using Web.ViewModels.Product
@model ProductIndexVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category table</h4>
                        <a class="btn btn-primary" asp-action="create" asp-controller="product">Create Product</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Cost</th>
                                        @*   <th>Description</th>
                                        <th>Quantity</th>
                                        <th>Weight</th>
                                        <th>Dimension</th>*@
                                        <th colspan="3" style="text-align:center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td>@product.Name</td>
                                            <td>@product.Cost</td>
                                            <td width="20px">
                                                <a asp-action="update" asp-controller="product" asp-route-id="@product.Id" class="btn btn-primary">Update</a>
                                            </td>
                                            <td width="20px">
                                                <form method="post">
                                                <button asp-action="delete" asp-controller="product" asp-route-id="@product.Id" class="btn btn-danger">Delete</button>
                                                </form>
                                            </td>
                                            <td width="20px">
                                                <a asp-action="details" asp-controller="product" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>